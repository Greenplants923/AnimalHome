@model IdentitySample.Models.RoleViewModel

@{
    ViewBag.Title = "编辑角色";
}

<div style="margin-top:30px;margin-bottom:100px;">
    <div class="col-md-1"></div>
    <div class="col-md-11">
        <h2 style="font-weight:bold;margin-bottom:20px;">编辑角色</h2>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2", @style = "font-size:18px;"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-primary" style="font-size:16px;" />
            </div>
        </div>
    </div>
}

<div>
    <div class="col-md-1"></div>
    <div class="col-md-11">
        <p class="btn btn-primary" style="font-size:16px;">
            @Html.ActionLink("返回", "Index")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
